# ~/.config/bat/config
# Theme
--theme="OneDark"
# Show line numbers and git modifications
--style="numbers,changes,header"
# Use italic text (works in most modern terminals)
--italic-text=always
# Paging behavior
# Use 'never' for short files, 'always' if you want consistent behavior
--paging=auto
# Pager settings (for less)
--pager="less --RAW-CONTROL-CHARS --quit-if-one-screen --mouse"
# Wrap long lines
--wrap=auto
# Syntax mappings for common files
--map-syntax "*.ino:C++"
--map-syntax ".ignore:Git Ignore"
--map-syntax "*.conf:INI"
--map-syntax "Vagrantfile:Ruby"
--map-syntax "*.j2:Jinja2"
--map-syntax "*.pp:Puppet"
--map-syntax "*.service:INI"
--map-syntax "*.timer:INI"
--map-syntax "*.socket:INI"
--map-syntax "*.mount:INI"
--map-syntax ".env:Bash"
--map-syntax ".env.*:Bash"
--map-syntax ".zshrc:Zsh"
--map-syntax ".zshenv:Zsh"
--map-syntax ".zprofile:Zsh"
--map-syntax ".zlogin:Zsh"
--map-syntax ".zlogout:Zsh"
--map-syntax "*.zsh:Zsh"
--map-syntax "*.zsh-theme:Zsh"
